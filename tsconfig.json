{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "$api": ["./src/api"],
      "$api/*": ["./src/api/*"],
      "$assets": ["./src/assets"],
      "$assets/*": ["./src/assets/*"],
      "$components": ["./src/components"],
      "$components/*": ["./src/components/*"],
      "$context": ["./src/context"],
      "$context/*": ["./src/context/*"],
      "$navigation": ["./src/navigation"],
      "$navigation/*": ["./src/navigation/*"],
      "$screens": ["./src/screens"],
      "$screens/*": ["./src/screens/*"],
      "$src": ["./src"],
      "$src/*": ["./src/*"],
    }
  }
}
